@model LibraryManagement.Models.ReservationViewModel

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Edit Reservation Status";
}

<h2 class="mt-4 mb-4">Edit Reservation Status</h2>

<form asp-action="Edit" method="post">
    <div class="col-md-10 mb-3">
        <div class="form-group">
            <label asp-for="UserName" class="control-label"></label>
            <input asp-for="UserName" class="form-control" readonly />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-10 mb-3">
        <div class="form-group">
            <label asp-for="ItemTitle" class="control-label"></label>
            <input asp-for="ItemTitle" class="form-control" readonly />
            <span asp-validation-for="ItemTitle" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-10 mb-3">
        <div class="form-group">
            <label asp-for="Reservation_Date" class="control-label"></label>
            <input asp-for="Reservation_Date" class="form-control" readonly />
            <span asp-validation-for="Reservation_Date" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-10 mb-3">
        <div class="form-group">
            <label asp-for="Status" class="control-label"></label>
            <select asp-for="Status" class="form-control">
                <option value="Pending">Pending</option>
                <option value="Approved">Approved</option>
                <option value="Rejected">Rejected</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="ReservationId" />

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
        <a asp-action="PendingReservations" class="btn btn-secondary">Cancel</a>
    </div>
</form>
