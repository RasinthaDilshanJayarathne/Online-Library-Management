@model LibraryManagement.Models.ReservationViewModel

@{
    ViewData["Title"] = "Create Reservation";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <div class="col-md-10 mb-3">
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label"></label>
                        <input asp-for="UserName" class="form-control" readonly />                        
                    </div>
                </div>

                <div class="col-md-10 mb-3">
                    <div class="form-group">
                        <label asp-for="ItemTitle" class="control-label"></label>
                        <input asp-for="ItemTitle" class="form-control" readonly />
                    </div>
                </div>

                <div class="col-md-10 mb-3">
                    <div class="form-group">
                        <label asp-for="Reservation_Date" class="control-label"></label>
                        <input asp-for="Reservation_Date" class="form-control" required />
                        <span asp-validation-for="Reservation_Date" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Please enter a Reservation Date.
                        </div>
                    </div>
                </div>

                <div class="col-md-10 mb-3">
                    <div class="form-group">
                        <label asp-for="Status" class="control-label"></label>
                        <input asp-for="Status" class="form-control" readonly />
                    </div>
                </div>

                <div class="col-md-10 mb-3">
                    <div class="form-group">
                        <label asp-for="Message" class="control-label"></label>
                        <input asp-for="Message" class="form-control" required />
                        <span asp-validation-for="Message" class="text-danger"></span>
                        <div class="invalid-feedback">
                            Please enter a Message.
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

                <div class="form-group">
                    <a asp-action="Index">Back to List</a>
                </div>
            </form>
        </div>
        <div class="col-md-3 d-flex align-items-center">
            <div class="book-image">
                <img src="@Url.Content("~/images/" + Model.ImageUrl)" alt="Image Preview" class="img-fluid img-thumbnail" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
