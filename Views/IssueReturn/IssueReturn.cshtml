@model LibraryManagement.Models.IssueReturnViewModel

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
    ViewData["Title"] = "Issue And Return Item";
}

<h2 class="mt-4 mb-4">Issue And Return Item</h2>

<form asp-action="IssueReturn" method="post">
    <div class="col-md-10 mb-3">
        <div class="form-group">
            <label asp-for="UserName" class="control-label"></label>
            <input asp-for="UserName" class="form-control" readonly />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-10 mb-3">
        <div class="form-group">
            <label asp-for="ItemTitle" class="control-label"></label>
            <input asp-for="ItemTitle" class="form-control" readonly />
            <span asp-validation-for="ItemTitle" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-10 mb-3">
        <div class="form-group">
            <label asp-for="IssueDate" class="control-label"></label>
            <input asp-for="IssueDate" class="form-control" readonly />
            <span asp-validation-for="IssueDate" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-10 mb-3">
        <div class="form-group">
            <label asp-for="ReturnDate" class="control-label"></label>
            <input asp-for="ReturnDate" class="form-control" />
            <span asp-validation-for="ReturnDate" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-10 mb-3">
        <div class="form-group">
            <label asp-for="Type" class="control-label"></label>
            <select asp-for="Type" class="form-control">
                <option value="Issue">Issue</option>
                <option value="Return">Return</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>

    <input type="hidden" asp-for="ReservationId" />

    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
